<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_principal_mor"
    tools:context="com.example.iguano_s.mashogarsupervisor.pantallas.actualizar">

    <EditText
        android:id="@+id/txt_actualiza_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://192.168.1.68" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_actualizar_articulos"
       android:background="@drawable/actualizarart_mor"
        android:onClick="clicActualizaArticulos"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lbl_actualizar_ultima"
        android:text="@string/lbl_ultima_actualizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_actualizar_subir"
        android:layout_margin="5dp"
            android:background="@drawable/subirinf_mor"
            android:onClick="clicActualizaSubir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lbl_actualizar_estado"
            android:text="@string/lbl_estado_subir"
            android:onClick="clicActualizaBajar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_actualizar_bajar"
        android:background="@drawable/sincronizar_mor"
        android:onClick="clicActualizaBajar"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
