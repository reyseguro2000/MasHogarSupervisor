<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_mor"
    tools:context="com.example.iguano_s.mashogarsupervisor.pantallas.PantallaInicial"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbl_inicio_sesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorblanco"
        android:text="@string/lbl_iniciar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/grupo_botones_inicial"
        android:layout_width="match_parent"
        android:layout_height="210dp"

       >

        <ImageButton
            android:id="@+id/btn_inicio_cobrador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"

            android:background="@drawable/cobrador_mor"
            tools:ignore="ContentDescription"
            />

        <ImageButton
            android:id="@+id/btn_inicio_supervisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/supervisor_mor"
            tools:ignore="ContentDescription"
            />

        <ImageButton
            android:id="@+id/btn_inicio_invitado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/invitado_mor"
            tools:ignore="ContentDescription" />



    </android.support.v7.widget.LinearLayoutCompat>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/lbl_ingresar_pass"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txt_inicio_sesion"
                android:inputType="textPassword"
                android:hint="@string/lbl_ingresar_pas"
                android:textColorHint="@color/colorblanco"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/fondo_cajas"
                />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/btn_inicio_configuracion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/configuracion_mor"
        tools:ignore="ContentDescription" />

</android.support.v7.widget.LinearLayoutCompat>
