<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.iguano_s.mashogarsupervisor.pantallas.Reporte">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txt_reporte_dia"
            android:hint="@string/lbl_dato_busca"
            android:inputType="date"
            android:text="2017-09-23"
            android:textColor="@color/colorMisLetras"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_reporte_busqueda_cobrador"
            android:onClick="clicBuscarDiaCobrador"
            android:background="@drawable/buscar_mor"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btn_reporte_total_cobrador"
            android:onClick="clicBuscartotalCobrador"
            android:background="@drawable/buscar_mor"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btn_reporte_busqueda_supervisor"
            android:onClick="clicBuscarDiaSupervisor"
            android:background="@drawable/buscar_mor"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/lbl_total"

        />
    <TextView
        android:id="@+id/lbl_reporte_total_recibos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/lbl_total"

        />
    <TextView
        android:id="@+id/lbl_reporte_total_cobrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/lbl_total"

        />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_reportes_pagos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">


    </android.support.v7.widget.RecyclerView>


</LinearLayout>
