<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.iguano_s.mashogarsupervisor.pantallas.CatalogoLocal$BuscarCliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txt_busqueda_buscar"
            android:hint="@string/lbl_dato_busca"
            android:textColor="@color/colorMisLetras"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_busqueda_nombre"
        android:onClick="clicBuscarNombre"
        android:background="@drawable/buscar_mor"
    android:layout_width="100dp"
    android:layout_height="100dp" />
        <Button
            android:id="@+id/btn_busqueda_direccion"
            android:onClick="clicBuscarDireccion"
            android:background="@drawable/buscar_mor"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <ListView
        android:id="@+id/lista_busqueda_clientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
